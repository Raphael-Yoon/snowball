{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Flask: Snowball App",
            "type": "debugpy",
            "request": "launch",
            "module": "flask",
            "env": {
                "FLASK_APP": "snowball.py",
                "FLASK_DEBUG": "1"
            },
            "args": [
                "run",
                "--host=127.0.0.1",
                "--port=5001"
            ],
            "jinja": true,
            "cwd": "${workspaceFolder}",
            "console": "integratedTerminal"
        },
        {
            "name": "Python: Current File",
            "type": "debugpy",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal",
            "cwd": "${workspaceFolder}"
        }
    ]
}
