{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python: Flask (Snowball)",
            "type": "debugpy",
            "request": "launch",
            "module": "flask",
            "env": {
                "FLASK_APP": "snowball.py",
                "FLASK_DEBUG": "1"
            },
            "args": [
                "run",
                "--host=0.0.0.0",
                "--port=5001",
                "--no-debugger",
                "--no-reload"
            ],
            "jinja": true,
            "cwd": "${workspaceFolder}/snowball",
            "justMyCode": true
        },
        {
            "name": "Python: snowball.py 직접 실행",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/snowball/snowball.py",
            "console": "integratedTerminal",
            "cwd": "${workspaceFolder}/snowball",
            "justMyCode": true
        }
    ]
}
